<div class="form__field-wrapper field">
  <input
    type="{{type}}"
    name="{{name}}"
    id="{{name}}"
    class="form__field"
    placeholder="{{placeholder}}"
    required
  />
  <span class="field__error">
    {{error}}
  </span>
  <label for="{{name}}" class="form__label">{{label}}</label>
</div>