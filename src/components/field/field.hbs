<div class="form__field-wrapper field">
  <input
    type="{{field.type}}"
    id="{{field.name}}"
    class="form__field"
    placeholder="{{field.placeholder}}"
    required
  />
  <span class="field__error">
    {{field.error}}
  </span>
  <label for="{{field.name}}" class="form__label">{{field.label}}</label>
</div>